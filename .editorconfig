root = true

[*]
charset = utf-8
end_of_line = lf
max_line_length = 120
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_size = 4
indent_style = tab

[*.html]
max_line_length = 1000

[*.js]
max_line_length = 100

[*.ts]
max_line_length = 100

[*.md]
max_line_length = 1000
indent_size = 4

[*.py]
indent_size = 4

[*.rego]
indent_size = 4
indent_style = tab
