mode: standalone

persistence:
  size: 50Gi

resources:
  requests:
    memory: 500Mi

rootUser: {{ .Values.objectStorage.s3.accessKey }}
rootPassword: {{ .Values.objectStorage.s3.secretKey }}

buckets:
  {{- range $key, $value := .Values.objectStorage.buckets }}
  - name: {{ $value }}
  {{- end }}

ingress:
  enabled: true
  hosts:
    - minio.{{ .Values.global.opsDomain }}

consoleIngress:
  enabled: true
  hosts:
    - minio.{{ .Values.global.baseDomain }}
