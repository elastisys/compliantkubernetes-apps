{
  "policy": {
    "policy_id": "kubernetes",
    "description": "Kubernetes ISM policy",
    "ism_template": {
      "index_patterns": ["kubernetes*"],
      "priority": 100
    },
    "default_state": "hot",
    "states": [
      {
        "name": "hot",
        "actions": [
          {
            "rollover": {
              "min_size": "{{ .Values.config.ism.kubernetes.rolloverSize }}MB",
              "min_index_age": "{{ .Values.config.ism.kubernetes.rolloverAge }}d"
            }
          }
        ]
      }
    ]
  }
}
