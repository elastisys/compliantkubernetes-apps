{
  "policy": {
    "policy_id": "kubeaudit",
    "description": "Kubeaudit ISM policy",
    "ism_template": {
      "index_patterns": ["kubeaudit*"],
      "priority": 100
    },
    "default_state": "hot",
    "states": [
      {
        "name": "hot",
        "actions": [
          {
            "rollover": {
              "min_size": "{{ .Values.config.ism.kubeaudit.rolloverSize }}MB",
              "min_index_age": "{{ .Values.config.ism.kubeaudit.rolloverAge }}d"
            }
          }
        ]
      }
    ]
  }
}
