{
  "compilerOptions": {
    "module": "nodenext",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "lib": ["ES2023"],
    "esModuleInterop": true,
    "moduleResolution": "nodenext"
  },
  "include": ["**/*.js", "**/*.d.ts"]
}
